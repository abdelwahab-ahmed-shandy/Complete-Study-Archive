@model Category
@{
    ViewData["Title"] = "Create New Category";
}

<div class="container">

    <div class="row mb-3">
    
        <div class="col-12">
            <h2 class="mb-3">Add New Category</h2>
        </div>

        <div class="col-12 d-flex justify-content-between align-items-center">
            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Go Back
            </a>
        </div>
    
    </div>

    <div class="row mt-3">

        <form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Category Name</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label for="Description" class="form-label">Category Description</label>
                <textarea class="form-control" id="Description" name="Description" rows="4">@Model?.Description</textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            

            <button type="submit" class="btn btn-secondary">Create</button>
        </form>
    
    </div>

</div>