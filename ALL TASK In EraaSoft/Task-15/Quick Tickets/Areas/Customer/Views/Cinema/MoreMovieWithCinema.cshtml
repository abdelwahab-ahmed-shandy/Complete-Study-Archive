@model CinemaMoviesViewModel

@{
    ViewData["Title"] = "Movies in " + Model.Cinema.Name;
}

<h2 class="text-center mb-4">Movies in @Model.Cinema.Name</h2>

@if (!Model.Movies.Any())
{
    <p class="text-center text-muted">No movies available in this cinema.</p>
}
else
{
    <div class="container mt-4">
        <div class="row">
            @foreach (var item in Model.Movies)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg p-3 bg-white rounded h-100">
                        <img src="~/Assats/Custumer/PhotoMovie/@item.ImgUrl"
                             class="card-img-top rounded shadow-sm"
                             alt="@item.Name"
                             style="height: 400px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Name</h5>
                            <p class="mb-2"><strong>Price:</strong> <span class="badge bg-success">$@item.Price</span></p>
                            <p class="mb-2"><strong>Start Date:</strong> @item.StartDate.ToString("M/d/yyyy h:mm tt")</p>
                            <p class="mb-2"><strong>End Date:</strong> @item.EndDate.ToString("M/d/yyyy h:mm tt")</p>

                            <a href="@Url.Action("Details", "Movie", new { area = "Customer", id = item.Id })"
                               class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
