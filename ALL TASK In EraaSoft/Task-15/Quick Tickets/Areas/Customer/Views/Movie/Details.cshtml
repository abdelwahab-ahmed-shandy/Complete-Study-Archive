@model Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 bg-white rounded">
        <div class="row">

            <div class="col-md-5">
                <img src="~/Assats/Custumer/PhotoMovie/@Model.ImgUrl"
                     class="img-fluid rounded shadow-lg w-100"
                     alt="@Model.Name"
                     style="height: 700px; object-fit: cover;">
            </div>


            <div class="col-md-7">
                <h2 class="fw-bold mb-3">@Model.Name</h2>

                <p class="mb-2"><strong>Description:</strong> @Model.Description</p>

                <p class="mb-2">
                    <strong>Price:</strong>
                    <span class="badge bg-success">$@Model.Price</span>
                </p>

               

                <p class="mb-2"><strong>Start Date:</strong> @Model.StartDate.ToString("M/d/yyyy h:mm tt")</p>
                <p class="mb-2"><strong>End Date:</strong> @Model.EndDate.ToString("M/d/yyyy h:mm tt")</p>

                @{
                    var now = DateTime.Now;
                }
                <p class="mb-3">
                    <strong>Status:</strong>
                    @if (Model.EndDate < now)
                    {
                        <span class="badge bg-danger">Expired</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Available</span>
                    }
                </p>

                
                <div class="mt-auto d-flex flex-column gap-3">
                    <a href="@Url.Action("Book", "Movies", new { id = Model.Id })" class="btn btn-success btn-sm">Book Ticket</a>

                    <a href="@Url.Action("Index", "Movie")" class="btn btn-secondary btn-sm">Back to Movies</a>
                </div>


            </div>
        </div>
    </div>
</div>
